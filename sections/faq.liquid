
<section class="faq-section">
  <div class="wrapper">
    <div class="faq-content">
      <h1>{{section.settings.csm_ttl}}</h1>
      <div class="accordion_container">
        <div class="accordian-tabs">
          <!--- Question 1 starts --->
          {% for block in section.blocks %}
          <div class="tab_outer">
            <div class="accordion_head">
              <span class="plusminus">+</span>
              <p>{{block.settings.qstn}}</p>
            </div>
            <div class="accordion_body" style="display: none;">
              {{ block.settings.ans }}
            </div>
          </div>
        {% endfor %}
         
        </div>
      </div>
    </div>
   
  </div>
</section>



{% schema %}
  {
    "name": "FAQ",
    "settings": [
		{
			"label": "Title",
			"type": "textarea",
			"id": "csm_ttl"
		}
],
"blocks":[
	{
		"name": "Faq",
		"type": "block-1",
		"settings":[
			{
				"label": "Question",
				"type": "textarea",
				"id": "qstn"
			},
			{
				"label": "Answer",
				"type": "textarea",
				"id": "ans"
			}
]
}
]
  }
{% endschema %}

