      margin:0;
  }
  .faq-content h4 {
      color: #000;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 4px;
      margin-bottom: 40px;
  }
  .accordion_head {
      display: flex;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid #86764f;
      cursor: pointer;
  }
  .accordion_head span {
      color: #86764f;
      font-weight: bold;
      font-size: 24px;
      margin-right: 35px;
  }
  .accordion_head p {
      color: #000;
      font-size: 18px;
  }
  .accordion_body {
      padding: 30px 50px;
  }
  .accordion_body p {
      color: #000;
      font-size: 15px;
      max-width: 1000px;
      line-height: 1.7;
