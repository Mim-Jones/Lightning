#shopify-section-cart-template .cart-list .cross-sell-item {
  position: relative;
  margin-top: 15px; }

#shopify-section-cart-template .cart-list .cross-sell-item:first-child:before {
  position: absolute;
  z-index: -1;
  content: "";
  left: calc(24%);
  top: -3px;
  border-style: solid;
  border-width: 10px;
  border-color: #f5fdff;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.15);
  transform: rotate(45deg);
  width: 10px;
  height: 10px; }

#shopify-section-cart-template .cart-list .cross-sell-item .cart-cross {
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 9;
  border: none;
  outline: none;
