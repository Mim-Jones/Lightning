.minibag-mask {
  background: rgba(41, 41, 41, 0.5);
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 99;
  display: none; }

.mini-bag-container {
  position: relative; }

#mini-cart {
  background: #fff;
  top: 0;
  right: 0;
  width: 550px;
  padding: 0;
  position: fixed;
  z-index: 9999;
  height: 100vh; }

.hide-minibag {
  transform: translateX(110%);
  transition: all .5s ease-in-out;
  visibility: hidden;
  width: 0 !important;
  overflow-x: hidden; }

.show-minibag {
  transition: all .5s ease-in-out;
  transform: translateX(0%);
  visibility: visible;
  overflow-x: hidden; }

.overflow-hidden {
  overflow: hidden; }

body.page-your-shopping-cart.overflow-hidden {
  overflow: hidden; }

body.page-your-shopping-cart {
  overflow: unset; }

#mini-cart .count-cross {
  position: relative; }

#mini-cart .count-cross .count {
  color: #161616;
  font-size: 16px;
  font-weight: 400; }

#mini-cart .count-cross .btn {
  position: absolute;
  right: 10px;
  top: 5px;
  z-index: 9;
  cursor: pointer; }

#mini-cart .min-cart-items {
  height: 75vh;
  overflow-y: auto; }

#mini-cart .min-cart-item {
  display: flex;
  border-bottom: 1px solid #e9edf0;
  padding-bottom: 1rem;
  margin-bottom: 0;
  padding: 1rem;
  flex-wrap: wrap;
  position: relative; }

#mini-cart .min-cart-item .cross-sell-item.min-cart-item {
  margin-top: 15px; }

#mini-cart .min-cart-item .cross-sell-item.min-cart-item:first-child:before {
  position: absolute;
  content: '';
  left: calc(38%);
  z-index: -1;
  top: -6px;
  width: 14px;
  height: 14px;
  border: 1px solid #f5fdff;
  box-shadow: 0 1px 3px 0 #ccc;
  background: #f5fdff;
  transform: rotate(45deg); }

#mini-cart .td-image {
  width: 110px !important;
  margin-right: 15px; }

#mini-cart .td-image img {
  width: 100%;
  height: auto; }

#mini-cart .info {
  color: #161616;
  font-size: 16px;
  font-weight: 400;
  padding-right: 0px;
  width: calc(80% - 115px); }

.td-price {
  text-align: right;
  width: calc(20% - 10px); }

#mini-cart .info .p-title h2 {
  color: #161616;
  font-size: 16px !important;
  font-weight: 500;
  text-align: left; }

#mini-cart .info .p-title p {
  color: #161616;
  font-size: 14px !important;
  font-weight: 400;
  margin-top: 2px;
  margin-bottom: 0; }

#mini-cart .td-price .price {
  font-size: 16px;
  font-weight: 500;
  color: #161616; }

#mini-cart .info .btn-remove {
  color: #242020;
  font-size: 13px;
  text-transform: uppercase;
  text-decoration: underline;
  margin-left: 15px;
  font-weight: 300;
  margin-top: 6px; }

#mini-cart .subtotal {
  text-align: right;
  padding-right: 5px;
  display: flex;
  justify-content: space-between;
  padding: 1rem;
  width: 100%; }

#mini-cart .subtotal strong {
  font-weight: 500; }

#mini-cart .count, #mini-cart .subtotal, #mini-cart .buttons {
  padding: 10px; }

#mini-cart table tr, #mini-cart .count {
  border-bottom: 1px solid #ccc; }

#mini-cart .quantity-con {
  display: flex;
  margin-top: 11px; }

#mini-cart .quantity-con .quantity-val {
  border: 1px solid #ccc;
  padding: 5px; }

@media (max-width: 767px) {
  div#mini-cart {
    width: 100%; }

  #mini-cart .td-image img {
    height: auto; }

  #mini-cart .min-cart-item .pairs-with-treasure.btn.button {
    font-size: 10px !important; }

  #mini-cart .min-cart-item .cross-sell-item.min-cart-item:before {
    left: calc(60%); } }
@media (max-width: 360px) {
  #mini-cart .min-cart-item .pairs-with-treasure.btn.button {
    font-size: 10px !important; } }
/* cross sell item */
.crosssell-group {
  width: 100%;
  margin: 0;
  z-index: 0;
  position: relative; }

.cross-sell-item {
  width: 100%;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.15);
  margin: 7px 0;
  background: #f5fdff; }

.bottom-part .buttons {
  margin-top: 0;
  width: 100% !important; }

.bottom-part .button-custom.button {
