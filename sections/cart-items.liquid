  letter-spacing: 1px; }

#mini-cart button.button.button-custom {
  width: auto;
  padding: 3px 5px;
  margin-top: 8px; }

#mini-cart button.button.button-custom:hover {
  background: #000; }

#mini-cart .min-cart-item .pairs-with-treasure.btn.button {
