<div class="mini-cart-con" id="mini__Cart">
  <div class="count-cross">
    <div class="count" count="{{cart.item_count}}">
      {{cart.item_count}} item(s) in your cart
    </div>
    <a class="btn close-bag pt-0" tabindex="0" >
      <svg class="svg-inline--fa fa-times fa-w-12" aria-hidden="true" data-fa-replacement="true" data-prefix="fal" data-icon="times" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="currentColor" d="M217.5 256l137.2-137.2c4.7-4.7 4.7-12.3 0-17l-8.5-8.5c-4.7-4.7-12.3-4.7-17 0L192 230.5 54.8 93.4c-4.7-4.7-12.3-4.7-17 0l-8.5 8.5c-4.7 4.7-4.7 12.3 0 17L166.5 256 29.4 393.2c-4.7 4.7-4.7 12.3 0 17l8.5 8.5c4.7 4.7 12.3 4.7 17 0L192 281.5l137.2 137.2c4.7 4.7 12.3 4.7 17 0l8.5-8.5c4.7-4.7 4.7-12.3 0-17L217.5 256z"></path></svg>
    </a>
  </div>

  <div class="min-cart-items">

    {% assign allreadyInCart = cart.items | map: "product" | map: "id" | uniq  %}

    {% for item in cart.items %}

    {% assign groupFlag = "" %}

    {% for tag in item.product.tags %}
    {% if tag contains "cart-group" %}
    {% assign groupFlag = tag | split:"-group:" | last %}
    {% endif %}
    {% endfor %}


    <div class="min-cart-item" index="{{forloop.index}}">
      <div class="td-image">
        <img src="{{item.image | img_url: '100x100' }}" />
      </div>
      <div class="info">
        <div class="p-title"> 
          <h2>{{item.product.title }}</h2>
          {% assign removeTitle =  item.product.title | append: " /"%}
          <p>{{ item.variant.title | remove: removeTitle }}</p>
        </div>
        <div class="quantity-con">
          <div class="quantity-val">Qty: {{ item.quantity }}</div>
          <a href="/cart/change?line={{forloop.index}}&amp;quantity=0" ItemId="{{ item.id }}" line="{{forloop.index}}" class="btn-remove cart-item--remove-link" data-cartitem-remove>Remove</a>
        </div>
        {% assign showbtn = false %}
        {% capture crosssellitems %}   
        {% assign productHandls = groupFlag | split: '+'%} 
        {% if productHandls.size > 0 %}
        <div class="crosssell-group">

          {% for productHandle in productHandls %}
          {% assign product = all_products[productHandle] %}
          {% if product.id != blank %}

          {% unless allreadyInCart contains product.id  %}

          {% assign showbtn = true %}
          <div class="cross-sell-item min-cart-item"  foundID="{{foundID}}" id="{{product.id}}">
            <div class="td-image"><img src="{{product.featured_image | img_url: '100x100' }}" /></div>
            <div class="info">
              <div class="p-title"><h2>{{product.title }}</h2></div>
              {% render 'minicart-cart-btn', product: product %}
              <a href="#" ItemId="{{ item.id }}" line="{{forloop.index}}" class="crosssell-group-close" data-cartitem-remove>Remove</a>
            </div>
          </div>
          {% endunless %}



          {% endif %}
          {% endfor %}
        </div>
        {% endif %}
        {% endcapture %}
        {% if showbtn %}
        <a href="" class="pairs-with-treasure btn button" findCount="{{hideButton}}">Pairs Best With</a>
        {% endif %}

      </div>
      <div class="td-price">
        <span class="item-price price">{{ item.price  | money }}</span>
      </div>
      {{crosssellitems}}
     


    </div>	
    {% endfor %}
  </div>
  <div class="bottom-part">
    <div class="subtotal">
      <strong>Subtotal </strong>
      <strong class="amount price">{{ cart.total_price  | money }}</strong>
    </div>

    <div class="buttons">
      <a href="/cart" class="button-custom button">View Cart</a>

    </div>
  </div>


</div>




